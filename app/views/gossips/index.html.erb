<div class="center jumbotron">
  <h1>INDEX DES GOSSIPS</h1>

</div>
<div class="jumbotron" style="background-color:#e3aef2;">
  <div class="container-fluid page">
    <div class="row">

      <% @gossips.each do |gossip| %>
        <div class="col-lg-3">
          <p>
            <strong>Pseudo</strong>
            <br>
            <%= gossip.anonymous_author %>
          </p>
          <p>
            <strong>Gossip</strong>
            <br>
            <%= gossip.content %>
          </p>

          <p class="small_text">
            Commentaires :
            <%= gossip.comments.count %>
          </p>

          <center>
            <a href="/gossips/<%= gossip.id %>/edit" type="button" class="btn btn-lg btn-primary">Editer</a>
            <a href="<%= gossip_path(gossip.id) %>" type="button" class="btn btn-lg btn-primary">Voir les commentaires</a>
          </center>

        </div>
      <% end %>
    </div>
  </div>
</div>
